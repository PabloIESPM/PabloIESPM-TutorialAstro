---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";

// Usar import.meta.glob con carga inmediata
const allPostsObject = import.meta.glob("../pages/posts/*.md", { eager: true });

// Convertir el objeto en un array
const allPosts = Object.values(allPostsObject);

const pageTitle = "Mi blog de Astro aprendizaje";
---

<BaseLayout {pageTitle}>
  <p>Aquí es donde publicaré acerca de mi viaje aprendiendo Astro.</p>
  <ul>
    {
      allPosts.map((post) => (
        <BlogPost url={post.url} title={post.frontmatter.title} />
      ))
    }
  </ul>
</BaseLayout>
